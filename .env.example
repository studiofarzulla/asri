# ASRI Configuration
# Copy to .env and fill in values

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/asri
DATABASE_SYNC_URL=postgresql://user:password@localhost:5432/asri

# API Keys (data sources)
DEFILLAMA_API_KEY=           # Optional, for higher rate limits
MESSARI_API_KEY=             # Required for Messari data
TOKEN_TERMINAL_API_KEY=      # Required for Token Terminal
FRED_API_KEY=                # Free, get from https://fred.stlouisfed.org/docs/api/api_key.html

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Rate Limiting
RATE_LIMIT_FREE=100          # requests per day
RATE_LIMIT_PRO=5000          # requests per day

# Scheduler
SCHEDULER_ENABLED=true
DAILY_UPDATE_HOUR=1          # UTC hour for daily ASRI calculation
